{
  "name": "minerva-ui",
  "version": "5.1.4",
  "license": "MIT",
  "author": "Cratebind",
  "description": "Composable, Simple React Base Components",
  "repository": "git://github.com/cratebind/minerva-ui.git",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/minerva-ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch --format esm",
    "dev:docs": "lerna run --parallel start",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom && yarn e2e",
    "lint": "yarn tsdx lint src test 'docs/**/*.{ts,tsx,js,jsx,mdx}' --ext js,tsx,ts,mdx --fix --cache --quiet",
    "bootstrap": "lerna bootstrap",
    "release": "np",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "sb": "yarn storybook",
    "semantic-release": "semantic-release",
    "e2e": "yarn cypress run"
  },
  "peerDependencies": {
    "react": "16.x || 17.x",
    "react-dom": "16.x || 17.x"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --no-verify --hook",
      "pre-commit": "yarn lint --quiet && git add ."
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-essentials": "^6.1.5",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.5",
    "@storybook/addons": "^6.1.5",
    "@storybook/react": "^6.1.5",
    "@types/jest": "^25.1.4",
    "@types/jest-axe": "^3.2.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.11.1",
    "cypress": "^6.0.1",
    "cypress-plugin-snapshots": "^1.4.4",
    "cypress-react-unit-test": "^4.17.1",
    "cz-conventional-changelog": "3.1.0",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-mdx": "^1.6.8",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^5.1.0",
    "fork-ts-checker-webpack-plugin": "^6.0.3",
    "husky": "^3.0.9",
    "jest-axe": "^3.4.0",
    "jest-styled-components": "^7.0.1",
    "lerna": "^3.10.7",
    "np": "^5.1.2",
    "prettier-eslint": "^9.0.1",
    "prism-react-renderer": "^1.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-live": "^2.2.2",
    "rollup-plugin-postcss": "^3.1.1",
    "semantic-release": "^17.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@mdx-js/react": "^1.5.1",
    "@reach/accordion": "^0.11.2",
    "@reach/auto-id": "^0.11.2",
    "@reach/checkbox": "^0.11.2",
    "@reach/combobox": "^0.11.2",
    "@reach/dialog": "^0.11.2",
    "@reach/menu-button": "^0.11.2",
    "@reach/popover": "^0.11.2",
    "@reach/tabs": "^0.11.2",
    "@reach/tooltip": "^0.11.2",
    "@styled-system/css": "^5.1.5",
    "@styled-system/prop-types": "^5.1.5",
    "@styled-system/should-forward-prop": "^5.1.5",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.4",
    "@types/styled-components": "^5.0.1",
    "@types/styled-system": "^5.1.9",
    "copy-to-clipboard": "^3.3.1",
    "eslint-config-cratebind": "^3.0.8",
    "eslint-config-react-app": "^5.2.1",
    "json2mq": "^0.2.0",
    "parse-numeric-range": "^1.2.0",
    "react-color": "^2.18.1",
    "styled-components": "^5.0.0",
    "styled-system": "^5.1.5",
    "tiny-warning": "^1.0.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
      "<rootDir>/test/setup.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/CodeBlock.*",
      "(.d.ts)$",
      ".stories.tsx$"
    ],
    "testPathIgnorePatterns": ["/node_modules/", "cypress"],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    },
    "globals": {
      "__DEV__": true
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "keywords": [
    "react",
    "component-library",
    "ui",
    "design-system",
    "react-components",
    "uikit",
    "accessible",
    "components",
    "styled-components",
    "library"
  ]
}
