{
  "name": "minerva-ui",
  "version": "3.0.5",
  "license": "MIT",
  "author": "Cratebind",
  "description": "Composable, Simple React Base Components",
  "repository": "git://github.com/cratebind/minerva-ui.git",
  "main": "dist/index.js",
  "module": "dist/minerva-ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch --format esm",
    "dev:docs": "lerna run --parallel start",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "lint": "yarn tsdx lint src test  --ext js,tsx,ts,mdx --fix --cache",
    "bootstrap": "lerna bootstrap",
    "release": "np",
    "storybook": "start-storybook -p 6006 --docs",
    "build-storybook": "build-storybook --docs",
    "sb": "yarn storybook",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --no-verify --hook",
      "pre-commit": "yarn lint && git add ."
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-docs": "^5.3.14",
    "@storybook/addon-links": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/preset-typescript": "^2.1.0",
    "@storybook/react": "^5.3.14",
    "@types/jest": "^25.1.4",
    "@types/jest-axe": "^3.2.1",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "babel-loader": "^8.0.6",
    "cz-conventional-changelog": "3.1.0",
    "cz-customizable": "^6.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-mdx": "^1.6.8",
    "eslint-plugin-prettier": "^3.1.2",
    "fork-ts-checker-webpack-plugin": "^4.0.5",
    "husky": "^3.0.9",
    "jest-axe": "^3.4.0",
    "jest-styled-components": "^7.0.1",
    "lerna": "^3.10.7",
    "np": "^5.1.2",
    "prettier-eslint": "^9.0.1",
    "prism-react-renderer": "^1.0.2",
    "react": "^16.13.0",
    "react-docgen-typescript-loader": "^3.7.0",
    "react-dom": "^16.13.0",
    "react-live": "^2.2.2",
    "semantic-release": "^17.0.2",
    "ts-loader": "^6.2.1",
    "tsdx": "^0.12.3",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@mdx-js/react": "^1.5.1",
    "@reach/checkbox": "^0.8.6",
    "@reach/dialog": "^0.9.1",
    "@reach/menu-button": "^0.10.0",
    "@styled-system/css": "^5.1.5",
    "@styled-system/should-forward-prop": "^5.1.5",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.5.0",
    "@types/styled-components": "^5.0.1",
    "@types/styled-system": "^5.1.9",
    "copy-to-clipboard": "^3.3.1",
    "eslint-config-cratebind": "^5.0.2",
    "react-feather": "^2.0.3",
    "styled-components": "^5.1.0",
    "styled-system": "^5.1.5"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
      "<rootDir>/test/setup.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/CodeBlock.*",
      "(.d.ts)$",
      ".stories.tsx$"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    },
    "globals": {
      "__DEV__": true
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "keywords": [
    "react",
    "component-library",
    "ui",
    "design-system",
    "react-components",
    "uikit",
    "accessible",
    "components",
    "styled-components",
    "library"
  ]
}
